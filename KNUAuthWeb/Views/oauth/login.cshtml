@model KNUAuthWeb.Models.User

@{
    ViewBag.Title = "Login";
}
<h2>Вхід до акаунту</h2>

@using (Html.BeginForm(FormMethod.Post))
{
    <style>

        table {
            border-collapse: collapse;
        }

        td {
            padding: 10px;
            text-align: center;
        }
    </style>
    <table>
        <hr style="width:250px">
        <tr>
            <div>
                Логін
            </div>
            <div>
                @Html.TextBoxFor(m => m.Username, htmlAttributes: new { @class = "input" })
                @Html.ValidationMessageFor(m => m.Username)
            </div>
            
        </tr>
        <tr>
            <div>
                Пароль
            </div>
            <div>
                @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "input" })
            </div>
        </tr>
        <hr style="width:250px">
        <tr>
            @if (@TempData["login.text"] != null)
            {
                <button class="kbutton" type="submit"><img src="~/src/img/gerb3.png" alt="Иконка">@TempData["login.text"]</button>
            }
            else
            {
                <button class="kbutton" type="submit"><img src="~/src/img/gerb3.png" alt="Иконка">Увійти</button>
            }
        </tr>
    </table>
    
    @if (@TempData["scope"] != null)
    {
        <h1>УВАГА!</h1>
        <div>Буде видано дозвіл на: @TempData["scope"]</div>
        <br>
        <br>
        <br>
    }
    else
    {

    }
    @TempData["Error"]
    
}

